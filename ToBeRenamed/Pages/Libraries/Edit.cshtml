@page
@model ToBeRenamed.Pages.Libraries.EditModel
@{
    ViewData["Title"] = "Edit Library";
}

<h2>Edit Library</h2>

<form method="POST">
    <div class="form-group">
        <label asp-for="NewTitle"></label>
        <input asp-for="NewTitle" class="form-control" />
        <span asp-validation-for="NewTitle" class="text-danger"></span>
        <button type="submit" class="btn btn-default" asp-page-handler="NewTitle">Update</button>
    </div>

    <div class="form-group">
        <label asp-for="NewDesc"></label>
        <input asp-for="NewDesc" class="form-control" />
        <span asp-validation-for="NewDesc" class="text-danger"></span>
        <button type="submit" class="btn btn-default" asp-page-handler="NewDesc">Update</button>
    </div>

    @*<div class="form-group">
            <button type="submit" class="btn btn-default">Edit</button>
        </div>*@
</form>

<div>
    <a asp-page="/Libraries/Index">Back to my libraries</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

